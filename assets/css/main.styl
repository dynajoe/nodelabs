@import mixins

html, *
   padding 0
   margin 0
html
   background-color #ddd
   color #46483E
   font-size 12pt

body
   margin 0
   padding 0
   font-family 'Titillium Web',sans-serif

.clear
   clear both

.content
   width 940px
   margin 0 auto

#header
   background-color #46483E
   box-shadow(0 5px 5px rgba(0,0,0,0.3))
   margin-bottom 20px
   padding 5px
   clear both
   h1
      display inline-block
   .contact
      float right
      height 80px
      margin-top 20px
      margin-right 30px
      li 
         float left
         margin-left 10px

#labs
   width 700px
   .header
      h2
         float left
h1
   height 80px
   width 140px
   margin-left 20px
.preview
   width 172px
   position relative
   height 112px
   background-color white
   float left
   margin-right 10px
   font-size .9em
   img
      border 1px solid #ccc
      padding 5px
   span
      display block
      position absolute
      bottom 6px
      left 6px
      width 160px
      
      &.banner
         background #333
         opacity(.5)
      &.duration
         color white
         left 10px

a.button 
   background-color #ffc477
   box-shadow(inset 0px 1px 0px 0px #fce2c1)
   background-linear-gradient(top, #ffc477, 5%, #fb9e25, 100%)
   border-radius 6px
   border 1px solid #eeb44f
   display inline-block
   color white
   font-size .8em
   font-weight bold
   padding 5px 20px
   text-decoration none
   text-shadow 1px 1px 0px #cc9f52
   
   &:hover
      background-linear-gradient(top, #fb9e25, 5%, #ffc477, 100%)
      background-color #dfdfdf
   &:active 
      position relative
      top 1px

.search 
   padding 6px 15px 6px 30px
   margin 3px
   background url('/images/search.png') no-repeat 8px 6px
   border 1px solid #d0d0d0
   background-color #fcfcfc

.search-form
   float right

input[type=text]
   color #bcbcbc

.rounded 
   border-radius 15px

ul
   list-style-type none
   margin 0
   padding 0
   

   li.lab
      padding 10px
      min-height 112px

      h2 
         font-size 1.4em
         margin 0
         padding 0
      p 
         font-size 1em
         margin 0 
         padding 0
      img
         float left
         margin-right 10px
      &:hover
         background-color #ccc

      